

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/home_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/mainBackGroundColor"
        android:orientation="vertical"
        tools:context="com.example.doublejk.laboum.view.HomeFragment">

        <LinearLayout
            android:id="@+id/home_hide_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="오늘의 추천 트랙"
                android:textColor="@color/homeTextColer"
                android:textSize="@dimen/material_text_subhead" />

            <LinearLayout
                android:id="@+id/home_dayrank_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/home_dayrank_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@null" />

                <TextView
                    android:id="@+id/home_dayrank_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="일간순위 40 KR"
                    android:textColor="@color/homeTextColer"
                    android:textSize="@dimen/material_text_body1" />

                <LinearLayout
                    android:id="@+id/home_weekbest_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/home_weekbest_img"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@null" />

                    <TextView
                        android:id="@+id/home_weekbest_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="주간베스트 40 KR"
                        android:textColor="@color/homeTextColer"
                        android:textSize="@dimen/material_text_body1" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="horizontal"
                android:background="#9e9e9e">
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="인기트랙"
                android:textColor="@color/homeTextColer"
                android:textSize="@dimen/material_text_subhead" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/home_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/mainBackGroundColor"
                android:clipToPadding="false"
                android:paddingBottom="50dp">
            </android.support.v7.widget.RecyclerView>


        </LinearLayout>


    </LinearLayout>
